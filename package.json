{
  "name": "fake-pev-shopping",
  "version": "1.0.0",
  "description": "Fake Personal Electric Vehicle Shopping application built with React. Browse, compare, buy, review vehicles and their accessories.",
  "author": "JSHoliq",
  "license": "ISC",
  "homepage": "https://github.com/JSHoliq/Fake-PEV-Shopping#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JSHoliq/Fake-PEV-Shopping.git"
  },
  "keywords": [
    "shopping",
    "pev",
    "react"
  ],
  "bugs": {
    "url": "https://github.com/JSHoliq/Fake-PEV-Shopping/issues"
  },
  "main": "src/frontend/app.js",
  "scripts": {
    "test:backend": "jest --watch --env=node",
    "test:debug": "node --inspect node_modules/jest/bin/jest.js --runInBand",
    "prettier": "prettier --write src/ !src/database/data",
    "prettier:backend": "prettier --write src/middleware/ src/database/ !src/database/data",
    "eslint:backend": "eslint src/middleware/** src/database/**",
    "start": "set \"NODE_ONLY=false\" && webpack-dev-server",
    "serve": "set \"NODE_ONLY=true\" && nodemon --exec \"npm run eslint:backend && npm run prettier:backend && node src/middleware/index.js\"",
    "prebuild": "npm run prettier",
    "build": "webpack"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.20.6",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^0.10.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "prettier-loader": "^3.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "sass-loader": "^9.0.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "jsonwebtoken": "^8.5.1",
    "mobx": "^5.15.6",
    "mobx-react": "^6.3.0",
    "mongodb": "3.5.10",
    "mongoose": "5.9.27",
    "mongoose-paginate-v2": "^1.3.13",
    "react-paginate": "^7.0.0",
    "react-simple-tree-menu": "^1.1.18"
  }
}
